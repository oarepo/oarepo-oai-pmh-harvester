{#def metadata, ui, layout #}

<h1 style="margin-bottom: 1em">{{ metadata.name }}</h1>
<dl class="ui very basic table">
    <Field label={ _('code.label') }>{{ metadata.code }}</Field>
    <Field label={ _('baseurl.label') }> {{ metadata.baseurl }}</Field>
    <Field label={ _('metadataprefix.label') }>{{ metadata.metadataprefix }}</Field>
    <Field label={ _('setspecs.label') }>{{ metadata.setspecs }}</Field>
    <Field label={ _('writer.label') }>{{ metadata.writer }}</Field>
    <Field label={ _('max_records.label') }>{{ metadata.max_records }}</Field>
    <Field label={ _('batch_size.label') }>{{ metadata.batch_size }}</Field>
    <Field label={ _('loader.label') }> {{ metadata.loader }}</Field>
    <Field label={ _('created.label') }> {{ metadata.created }}</Field>
    <Field label={ _('updated.label') }> {{ metadata.updated }}</Field>
    <dt>{{_('runs.label')}}</dt>
    <dd>
        <a href="/oai/harvest/runs/?q=&f=harvester_id%3A{{metadata.id}}&l=list&p=1&s=10&sort=newest">{{_('runs_link.label')}}</a>
    </dd>
<dt>{{ _('comment.label') }}</dt>
  <dd>
    {{ metadata.comment }}
  </dd>
  <dt>{{ _('transformers.label') }}</dt>
    <dd>
  {% for i in (metadata.transformers or []) %}
      {{ i }}<br/>
  {% endfor %}
    </dd>
</dl>
